---
const currentPath = Astro.url.pathname;
---

<div class="bg-black">
  <header class="sticky top-0 z-50 bg-black/80 backdrop-blur-sm">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <div class="flex items-center space-x-2">
          <img class="h-10 w-auto" src="IMG/logoCineLeonelda.png" alt="Cine Leonelda">
          <h1 class="text-3xl font-bold text-red-600 hover:text-red-500 transition-colors">
            CINE LEONELDA
          </h1>
        </div>
        <nav class="hidden lg:flex items-center space-x-8">
          <a
            href="/"
            class={`relative text-lg font-medium text-white transition-all duration-300
              after:content-[''] after:absolute after:left-0 after:bottom-0 after:w-full after:h-[2px]
              after:z-[-1] ${currentPath === '/' ? 'after:bg-white' : 'after:bg-transparent'}`}
          >
            Inicio
          </a>

          <a
            href="/"
            class={`relative text-lg font-medium text-white transition-all duration-300
              after:content-[''] after:absolute after:left-0 after:bottom-0 after:w-full after:h-[2px]
              after:z-[-1] ${currentPath === '/' ? 'after:bg-white' : 'after:bg-transparent'}`}
          >
            Cartelera
          </a>
          
          <a
            href="/"
            class={`relative text-lg font-medium text-white transition-all duration-300
              after:content-[''] after:absolute after:left-0 after:bottom-0 after:w-full after:h-[2px]
              after:z-[-1] ${currentPath === '/' ? 'after:bg-white' : 'after:bg-transparent'}`}
          >
            Confitería
          </a>

          <a
            href="/"
            class={`relative text-lg font-medium text-white transition-all duration-300
              after:content-[''] after:absolute after:left-0 after:bottom-0 after:w-full after:h-[2px]
              after:z-[-1] ${currentPath === '/' ? 'after:bg-white' : 'after:bg-transparent'}`}
          >
            Sobre Nosotros
          </a>

          <a href="#" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-full font-medium transition-colors">Comprar Entradas</a>
        </nav>

        <!-- Botón móvil -->
        <div class="lg:hidden">
          <button type="button" class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none">
            <span class="sr-only">Abrir menú</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Menú móvil (oculto por defecto) -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="space-y-1 px-2 pb-3 pt-2">
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Inicio</a>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Cartelera</a>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Confitería</a>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Sobre Nosotros</a>
        <a href="#" class="block w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-center font-medium mt-2">Comprar Entradas</a>
      </div>
    </div>
  </header>
</div>
